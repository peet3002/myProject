<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="7dp">

            <ImageView
                android:id="@+id/verified_ic_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/verified"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/error_ic_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/error"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorTextBlack"
                    android:layout_weight="0.9"
                    tools:text="รายละเอียด"
                    android:id="@+id/counsel_detail_item"/>
                <TextView
                    android:id="@+id/counsel_date_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 Nov 2017"
                    android:layout_weight="0.1"/>
            </LinearLayout>


            <TextView
                android:id="@+id/counsel_tag_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ปัญหาการเรียน"
                android:layout_marginTop="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/bg_chat_you"
                android:layout_marginLeft="5dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>

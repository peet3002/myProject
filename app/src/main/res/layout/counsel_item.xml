<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/verified_ic_item"
                android:layout_width="25dp"
                android:layout_marginTop="5dp"
                android:layout_height="25dp"
                android:layout_marginStart="20px"
                android:src="@drawable/verified"
                android:visibility="gone"
               />

            <ImageView
                android:id="@+id/error_ic_item"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/error"
                android:layout_marginTop="5dp"
                android:layout_marginStart="20px"
                android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="0.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/counsel_detail_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/colorTextBlack"
                    android:textSize="16sp"
                    tools:text="qwewqewasdsadadadadadadadadadaaq"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/counsel_date_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:text="12 Nov 2017" />
            </LinearLayout>


            <TextView
                android:id="@+id/counsel_tag_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_chat_you"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="ปัญหาการเรียน"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="#ffffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#fffafafa"
        >

        <TextView
            android:id="@+id/voiceremoteUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="14dp"
            android:text="Sample user"
            android:textColor="@color/colorTextBlack"
            android:textSize="28sp"/>

        <TextView
            android:id="@+id/voicecallState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Incoming call"
            android:textColor="@color/colorTextBlack"
            android:textSize="16sp"
            android:textAllCaps="true"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/remote_user_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="0dip"
        android:layout_weight="3"
        android:contentDescription="Call background">

    </ImageView>

    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageButton
            android:id="@+id/voiceanswerButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_online"
            android:src="@drawable/ic_call_white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:rotation="135"/>

        <ImageButton
            android:id="@+id/voicedeclineButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_red"
            android:src="@drawable/ic_call_white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:rotation="135"/>


    </RelativeLayout>

</LinearLayout>